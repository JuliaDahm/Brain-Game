<%= button_to 'Log out', destroy_user_session_path, method: :delete %>
<% if @name %>
  <h2>Hi, <%= @name.split(' ')[0] %></h2>
<% else %>
  <h2>Hi, <%= current_user.email.split('@')[0] %></h2>
<% end %>
<h3>Current Score: <%= current_user.score %></h3>
<%= button_to 'Create Questions', new_user_question_path(current_user.id) %>
<%= button_to 'Answer Questions', user_questions_path(current_user.id) %>
<% @questions.each do |question| %>
  <p>
    <%= question.text %>
    <%= question.answer %>
  <p>
<% end %>
<hr />
<h3>User Scores:</h3>
<% @users.each do |user| %>
  <h4><%= user.name || user.email %></h4>
  <p><%= user.score %></p>
<% end %>
