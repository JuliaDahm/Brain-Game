<%= button_to 'Log out', destroy_user_session_path, method: :delete %>
<% if @name %>
  <h2>Hi, <%= @name.split(' ')[0] %></h2>
<% else %>
  <h2>Hi, <%= current_user.email.split('@')[0] %></h2>
<% end %>
<h3>Current Score: <%= current_user.score %></h3>
<%= link_to 'Create Questions', new_question_path %>
<%= link_to 'Answer Questions', questions_path %>
<%= link_to 'Scores', scores_path %>
<% @questions.each do |question| %>
  <p>
    <%= question.text %>
    <%= question.option1 %>
    <%= question.option2 %>
    <%= question.correct_ans %>
  <p>
<% end %>
<hr />
<h3>User Scores:</h3>
<% @users.each do |user| %>
  <h4><%= user.name || user.email %></h4>
  <p><%= user.score %></p>
<% end %>
