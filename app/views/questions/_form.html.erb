<%= simple_form_for @question, url: questions_path, method: :create do |f| %>
  <%= f.label :content, "Question:" %>
  <%= f.text_area :text %>
  <%= f.label :content, "Incorrect Answer 1" %>
    <%= f.text_field :option1 %>
  <%= f.label :content, "Incorrect Answer 2" %>
    <%= f.text_field :option2 %>
  <%= f.label :content, "Correct Answer" %>
    <%= f.text_field :correct_ans %>
  <%= f.submit %>
<% end %>
